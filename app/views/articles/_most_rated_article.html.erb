<% if obj.image.attached? %>
      <div class="slider__bg" style="background: url(<%= rails_blob_url(obj.image) %>)">
            <div class="slider__bg__title" id="rated_title">
                  <%=  link_to obj.title, article_path(obj), class:"title-link" %>
            </div>
            <div class="slider__bg__content">
                  <%= truncate(obj.content, length:100, separator:' ') %>
            </div>
      </div>
<% end %>   
