<% if article.image.attached? %>
      <div class="slider__bg" style="background: url(<%= rails_blob_url(article.image) %>); width: 100%; height: 100%; background-size: 50px 50px; background-repeat: no-repeat; background-position: 10px 10px; ">
            <div class="slider__bg__title" id="rated_title">
                  <%=  link_to article.title, article_path(article), class:"title-link" %>
            </div>
            <div class="slider__bg__content">
                  <%= truncate(article.content, length:100, separator:' ') %>
            </div>
      </div>
<% end %>   
